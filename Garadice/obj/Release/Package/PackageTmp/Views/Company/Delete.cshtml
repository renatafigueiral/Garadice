@model Garadice.Models.Company

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<span class='label label-danger'>@ViewBag.Msg </span>
    <div>
        <h4>Company</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.VatNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.VatNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CRO)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CRO)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SiteUrl)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SiteUrl)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            @if (Model.Contacts.Any())
            {
                <dt></dt>
                <dd><hr /></dd>
                <dt>
                    @Html.DisplayName("Contacts")
                </dt>

                <dd>
                    <table cellspacing="5" cellpadding="5">
                        <tr>
                            <th>Name</th>
                            <th>Phone/Mobile</th>
                            <th>Email</th>
                            <th>Position</th>
                            <th>More Info</th>
                        </tr>
                        @foreach (var contact in Model.Contacts)
                        {
                            <tr>
                                <td>@contact.FullName</td>
                                <td>@contact.Phone @contact.Mobile</td>
                                <td>@contact.Email</td>
                                <td>@contact.Position</td>
                                <td>@contact.Description</td>
                            </tr>
                        }
                    </table>
                </dd>
            }
            @if (Model.Documents.Any())
            {
                <dt></dt>
                <dd><hr /></dd>
                <dt>
                    @Html.DisplayName("Documents ")
                </dt>

                <dd>
                    <table cellspacing="5" cellpadding="5">
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>More Info</th>
                            <th>Created Date</th>
                            <th></th>

                        </tr>
                        @foreach (var doc in Model.Documents)
                        {
                            <tr>
                                <td><span class='label @doc.DocumentType'>@doc.DocumentType</span></td>
                                <td>@doc.Name</td>
                                <td>@doc.Description</td>
                                <td>@doc.CreatedDate</td>
                                <td>@Html.ActionLink("download", "Download", "Document", new { id = doc.DocumentID }, null)</td>
                            </tr>
                        }
                    </table>

                </dd>
            }

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
