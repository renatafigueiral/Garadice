@model IEnumerable<Garadice.Models.JobTrack>

@{
    ViewBag.Title = "Index";
}

<h2>Job Time Entries</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Job.JobName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfHours)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.End)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Job.JobName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @item.NumberOfHours
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.End)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.JobTrackID }) |
            @Html.ActionLink("Details", "Details", new { id=item.JobTrackID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.JobTrackID })
        </td>
    </tr>
}

</table>
